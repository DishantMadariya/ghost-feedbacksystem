# ========================================
# Ghost Feedback System - Frontend
# Environment Variables Template
# ========================================

# API Configuration
# Development: http://localhost:5000
# Production: https://your-backend.onrender.com
REACT_APP_API_BASE_URL=http://localhost:5000
REACT_APP_API_VERSION=v1

# App Configuration
REACT_APP_NAME=Ghost Feedback System
REACT_APP_DESCRIPTION=Anonymous suggestion box for secure employee feedback
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE_SUPPORT=false

# External Services
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_MIXPANEL_TOKEN=

# Performance & Monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
REACT_APP_ENABLE_ERROR_TRACKING=false
REACT_APP_ENABLE_USER_ANALYTICS=false

# Development Only (remove in production)
REACT_APP_SHOW_DEBUG_INFO=true
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_LOG_LEVEL=debug

# Build Configuration
REACT_APP_GENERATE_SOURCEMAP=true
REACT_APP_OPTIMIZE_BUNDLE=true
REACT_APP_ENABLE_COMPRESSION=true

# PWA Configuration
REACT_APP_PWA_NAME=Ghost Feedback System
REACT_APP_PWA_SHORT_NAME=Ghost Feedback
REACT_APP_PWA_THEME_COLOR=#0f766e
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff
REACT_APP_PWA_DISPLAY=standalone

# Security
REACT_APP_ENABLE_HTTPS_REDIRECT=false
REACT_APP_ENABLE_CONTENT_SECURITY_POLICY=true
REACT_APP_ENABLE_STRICT_TRANSPORT_SECURITY=false

# Localization (if needed in future)
REACT_APP_DEFAULT_LOCALE=en
REACT_APP_SUPPORTED_LOCALES=en,es,fr
REACT_APP_ENABLE_I18N=false

# Custom Branding
REACT_APP_BRAND_COLOR_PRIMARY=#0ea5e9
REACT_APP_BRAND_COLOR_SECONDARY=#0f766e
REACT_APP_BRAND_COLOR_ACCENT=#f59e0b

# Social Media (if needed)
REACT_APP_TWITTER_HANDLE=
REACT_APP_FACEBOOK_PAGE=
REACT_APP_LINKEDIN_PAGE=

# Support & Contact
REACT_APP_SUPPORT_EMAIL=support@yourcompany.com
REACT_APP_CONTACT_PHONE=
REACT_APP_HELP_DESK_URL=

# Third-party Integrations
REACT_APP_ENABLE_GOOGLE_SIGNIN=false
REACT_APP_GOOGLE_CLIENT_ID=
REACT_APP_ENABLE_SLACK_INTEGRATION=false
REACT_APP_SLACK_WEBHOOK_URL=

# Testing & QA
REACT_APP_ENABLE_TEST_MODE=false
REACT_APP_TEST_USER_EMAIL=
REACT_APP_TEST_USER_PASSWORD=
REACT_APP_MOCK_API_DELAY=1000

# Deployment Specific
REACT_APP_DEPLOYMENT_ENV=development
REACT_APP_BUILD_TIMESTAMP=
REACT_APP_COMMIT_HASH=
REACT_APP_BRANCH_NAME=
